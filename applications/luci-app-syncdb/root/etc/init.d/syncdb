#!/bin/sh /etc/rc.common

START=98

run_service() {

  cronfile="/usr/syncdb/cronfile"
  keyword="syncdb"
	rm -rf $cronfile
  `crontab -l > $cronfile`
  for line in $(cat $cronfile)
  do
      if [[ $line == *$keyword* ]]
      then
          pass
      else
          `echo $line >> $cronfile`
      fi
  done


}


start() {
  run_service
  echo "* * */1 * * python /usr/syncdb/syndDB.py" >> $cronfile
  crontab -r
  crontab /usr/ddns/cronfile
}

stop() {
  run_service
  crontab -r
  crontab /usr/ddns/cronfile
}

restart() {
	start
}
